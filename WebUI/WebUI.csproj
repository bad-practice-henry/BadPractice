        <LastGenOutput>EnumSelectList.Designer.cs</LastGenOutput>
      </EmbeddedResource>
      <EmbeddedResource Update="Resources\Components\Generic\EnumSelectList.et.resx">
        <Generator>ResXFileCodeGenerator</Generator>
        <LastGenOutput>EnumSelectList.et.Designer.cs</LastGenOutput>
      </EmbeddedResource>
      <EmbeddedResource Update="Resources\Constants\Constants.resx">
        <Generator>ResXFileCodeGenerator</Generator>
        <LastGenOutput>Constants.Designer.cs</LastGenOutput>
      </EmbeddedResource>
      <EmbeddedResource Update="Resources\Constants\Constants.et.resx">
        <Generator>ResXFileCodeGenerator</Generator>
        <LastGenOutput>Constants.et.Designer.cs</LastGenOutput>
      </EmbeddedResource>
    </ItemGroup>

    <ItemGroup>
      <Compile Update="Resources\Pages\SalaryCalculator.Designer.cs">
        <DesignTime>True</DesignTime>
        <AutoGen>True</AutoGen>
        <DependentUpon>SalaryCalculator.resx</DependentUpon>
      </Compile>
      <Compile Update="Resources\Pages\SalaryCalculator.et.Designer.cs">
        <DesignTime>True</DesignTime>
        <AutoGen>True</AutoGen>
