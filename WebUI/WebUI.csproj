        <LastGenOutput>EnumCheckbox.Designer.cs</LastGenOutput>
      </EmbeddedResource>
      <EmbeddedResource Update="Resources\Components\Generic\EnumCheckbox.et.resx">
        <Generator>ResXFileCodeGenerator</Generator>
        <LastGenOutput>EnumCheckbox.et.Designer.cs</LastGenOutput>
