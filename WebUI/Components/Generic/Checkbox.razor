@inherits WebUI.Components.Generic.Base.BaseInput<bool>

<div class="form-check mb-2">
    <input
        class="form-check-input"
        type="checkbox"
        checked="@InputValue"
        id="@Id"
        @oninput="HandleValueChanged"/>
    @if (!string.IsNullOrWhiteSpace(FormLabel))
    {
        <label class="form-check-label" for="@Id">
            @FormLabel
        </label>
    }
</div>

@code {

    protected override Task HandleValueChanged(ChangeEventArgs eventArgs)
    {
        InputValue = bool.Parse(eventArgs.Value?.ToString() ?? "false");
        return ValueChanged.InvokeAsync(InputValue);
    }

}